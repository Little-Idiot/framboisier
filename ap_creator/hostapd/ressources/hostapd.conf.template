# /etc/hostapd/hostapd.conf

#### System ############################
interface=wlan0


#### Radio #############################
hw_mode=g

ieee80211n=1
ieee80211d=1
country_code=FR

channel=1


#### Access-point ######################
ssid=<ap_ssid>

auth_algs=1
ignore_broadcast_ssid=1

wpa=2
wpa_key_mgmt=WPA-PSK 
wpa_passphrase=<ap_password>

rsn_pairwise=CCMP
